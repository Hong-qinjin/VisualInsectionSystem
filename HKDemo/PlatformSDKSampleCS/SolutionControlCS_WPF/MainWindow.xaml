<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SolutionControlCS_WPF"
        xmlns:Release="clr-namespace:VMControls.WPF.Release;assembly=VMControls.WPF.Release" x:Class="SolutionControlCS_WPF.MainWindow"
        mc:Ignorable="d"
        Title="SolutionControlCS_WPF" Height="650" Width="1080" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="320"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="vmProduce" Grid.Column="1" Grid.RowSpan="2"  Margin="0,0,0,0">
            <GroupBox Header="{DynamicResource Procedure Config}" FontSize="16"  Margin="2,2,2,2" >
                <Release:VmProcedureConfigControl x:Name="vmProduceConfigControl" Margin="2,2,2,2" />
            </GroupBox>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="0" >
            <GroupBox Header="{DynamicResource Solution Operation}"  FontSize="16" Margin="2,2,2,2" >
                <Grid Margin="2,2,2,2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"></RowDefinition>
                        <RowDefinition Height="45"></RowDefinition>
                        <RowDefinition Height="45"></RowDefinition>
                        <RowDefinition Height="45"></RowDefinition>
                        <RowDefinition Height="45"></RowDefinition>
                        <RowDefinition Height="45"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label   Content="{DynamicResource Path}" Margin="5,0,0,0" Grid.Column="0" FontSize="16" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"></Label>
                        <TextBox Grid.Column="1"   x:Name="VmSolutionPath" Text="{Binding vmSolutionPath,Mode=TwoWay}" FontSize="16" VerticalAlignment="Center" Margin="5,5,5,5" TextAlignment="Left"  ></TextBox>
                    </Grid>
                    <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label  Grid.Row="2" Grid.Column="0" Margin="5,0,0,0" Content="{DynamicResource Password}" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>
                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="VmSolutionPassword" Text="{Binding vmSolutionPassword,Mode=TwoWay}" VerticalAlignment="Center" FontSize="16" Margin="5,5,5,5" TextAlignment="Left"  ></TextBox>
                    </Grid>
                    <Button x:Name="SelectSolution" Content="{DynamicResource Select Path}" Grid.Row="1" Grid.Column="1"  FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="SelectSolution_Click" Margin="5,5,5,5"></Button>
                    <Button x:Name="LoadSolution" Margin="5,5,5,5" Content="{DynamicResource Load Solution}" Grid.Row="3" Grid.Column="0"  FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="LoadSolution_Click"></Button>
                    <Button x:Name="SaveSolution" Margin="5,5,5,5" Content="{DynamicResource Save Solution}" Grid.Row="3" Grid.Column="1"  FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="SaveSolution_Click"></Button>
                    <Button x:Name="GetSolutionVersion" Margin="5,5,5,5" Content="{DynamicResource Get Version}" Grid.Row="4" Grid.Column="0"  FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="GetSolutionVersion_Click"></Button>
                    <Button x:Name="CloseSolution" Margin="5,5,5,5" Content="{DynamicResource Close Solution}" Grid.Row="4" Grid.Column="1" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="CloseSolution_Click"></Button>
                    <Button x:Name="GetSolutionPath" Margin="5,5,5,5" Content="{DynamicResource Get Path}" Grid.Row="5" Grid.Column="0"  FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="GetSolutionPath_Click"></Button>
                    <Button x:Name="CheckSolutionPassword" Margin="5,5,5,5" Content="{DynamicResource Check Password}" Grid.Row="5" Grid.Column="1"  FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="CheckSolutionPassword_Click"></Button>
                </Grid>
            </GroupBox>
        </Grid>
        <Grid  Grid.Row="1" Grid.Column="0" Margin="2,2,2,2">
            <GroupBox Header="{DynamicResource Message Display}" FontSize="16" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="ClearMessage" Grid.Row="0" Grid.Column="1" Margin="5,5,5,5" Content="{DynamicResource Clear Msg}" Click="ClearMessage_Click"></Button>
                    <ListBox  Grid.Row="1" Grid.ColumnSpan="2"  x:Name="listBoxResult" Margin="0,0,0,0" />
                    <Button x:Name="SwitchLanguage" Grid.Row="0" Margin="6,5,4,5" Content="中文/EN" Click="SwitchLanguage_Click"/>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
